<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>
    <style name="text_small" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_small_blue" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>
    <style name="preference_screen">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>